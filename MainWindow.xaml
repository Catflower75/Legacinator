<mah:MetroWindow x:Class="Legacinator.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
                 Icon="floppy_disk_icon.ico" Loaded="MainWindow_OnLoaded"
                 Title="Nefarius' Legacinator" Height="500" Width="800">
    <Grid>
        <mah:MetroTabControl Margin="16">
            <mah:MetroTabItem Header="Detection">
                <StackPanel Margin="16">
                    <mah:MetroHeader Margin="0, 16, 0, 16"
                        Header="If problems are detected, they will show up below as tiles you can click on to get information about a solution!" />

                    <WrapPanel x:Name="ResultsPanel"/>
                </StackPanel>
            </mah:MetroTabItem>

            <mah:MetroTabItem Header="About" />
        </mah:MetroTabControl>
    </Grid>
</mah:MetroWindow>